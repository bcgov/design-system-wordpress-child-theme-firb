                {
                    "slug": "light-green",
                    "color": "#79A04E",
                    "name": "Light Green"
                },
                {
                    "slug": "drk-brown",
                    "color": "#825923",
                    "name": "Dark Brown"
                },
                {
                    "slug": "light-brown",
                    "color": "#C0882C",
                    "name": "Light Brown"
                },
                {
                    "slug": "drk-grey",
                    "color": "#4C4D4C",
                    "name": "Dark Grey"
                }
            ]
